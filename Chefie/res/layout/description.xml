<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
		
		<RelativeLayout 
		    android:id="@+id/body"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
		
		    <TextView
		        android:id="@+id/rectitle"
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:text="recipe_title"
		        android:textAppearance="?android:attr/textAppearanceMedium" 
		        android:singleLine="false"
		        android:padding="15dp"/>
		
		    <TextView
		        android:id="@+id/recdesc"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/rectitle"
		        android:textAppearance="?android:attr/textAppearanceSmall"
		        android:layout_marginTop="20dp"
		        android:text="\t \t recipe_desc_recipe_desc_recipe_desc_recipe_desc_recipe_desc_recipe_desc_recipe_desc_" 
		        android:singleLine="false"
		        android:padding="15dp"/>
		
		    <ImageView
		        android:id="@+id/recimage"
		        android:layout_width="match_parent"
		        android:layout_height="180dp"
		        android:layout_below="@id/recdesc"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="30dp"
		        android:adjustViewBounds="false"
		        android:src="@drawable/ic_launcher" />

		    <ImageButton
		        android:id="@+id/star"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_above="@+id/recdesc"
		        android:layout_alignParentRight="true"
		        android:background="@null"
		        android:src="@drawable/ic_launcher"
		        android:onClick="favRemover"/>
		
		</RelativeLayout>
		
</ScrollView>
