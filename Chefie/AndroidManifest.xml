<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chefie"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/chefie"
        android:label="@string/app_name"
        android:theme="@style/Theme.Chefie"
        android:uiOptions="splitActionBarWhenNarrow" >
        <activity
            android:name="com.example.chefie.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.chefie.RecipeActivity"
            android:label="@string/title_activity_recipe" >
        </activity>
        <activity
            android:name="com.example.chefie.FavoritesActivity"
            android:label="@string/title_activity_favorites" >
        </activity>
        <activity
            android:name="com.example.chefie.NewSearchActivity"
            android:label="@string/title_activity_new_search" >
        </activity>
        <activity
            android:name="com.example.chefie.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
    </application>

</manifest>
